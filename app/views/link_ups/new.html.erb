<h1>Forge a Link-Up!</h1>


<%= form_for @link_up do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name, placeholder: "Name this LinkUp!" %>

  <%= f.label :user_id %>
  <%= f.text_field :user_id, placeholder: "Enter user id(for now)" %>

  <%= f.label "location"%>
  <%= f.collection_select(:location_id, @locations, :id, :name) %>

  <%= f.label "interest"%>
  <%= f.collection_select(:interest_id, @interests, :id, :name) %>

  <%= f.label "guest"%>
  <%= f.collection_select(:guest_id, @users, :id, :first_name) %>

  <%= f.submit %>
<% end %>
